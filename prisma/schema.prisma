generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CNA_Orders {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  @@map("CNA-Orders")
}

model Orders {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now()) @map("created_at")
  user_id      String?
  orderNumber String
  product     String  // Updated to reflect the product name
  quantity    Int     // Updated to reflect the quantity of the product
  price  Float   // Updated to reflect the total price of the order
  updatedAt   DateTime @default(now()) @map("updated_at")
}
